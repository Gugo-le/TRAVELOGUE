rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // users 컬렉션 - 자신의 프로필만 읽고 쓸 수 있음
    match /users/{userId} {
      // 읽기: 로그인된 사용자는 다른 사용자 프로필 검색 가능
      allow read: if request.auth != null;
      // 쓰기: 본인만 자신의 프로필을 관리
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // users/{userId}/trips 서브컬렉션 - 자신의 여행 기록만 접근
    match /users/{userId}/trips/{tripId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // users/{userId}/stamps 서브컬렉션 - 자신의 도장만 접근
    match /users/{userId}/stamps/{stampId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // users/{userId}/routes 서브컬렉션 - 자신의 경로만 접근
    match /users/{userId}/routes/{routeId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // users/{userId}/journeyRoutes 서브컬렉션 - 자신의 폴리라인만 접근
    match /users/{userId}/journeyRoutes/{routeId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // friends/{userId}/friendList - 친구 목록 (자신만 읽기/쓰기)
    match /friends/{userId}/friendList/{friendId} {
      allow read, create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // friendRequests/{userId}/incoming - 받은 친구 요청 (자신만 접근)
    match /friendRequests/{userId}/incoming/{senderId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null; // 누구나 요청 보낼 수 있음
    }

    // chats/{chatId}/messages - 채팅 메시지 (참여자만 읽기/쓰기)
    match /chats/{chatId} {
      allow read: if request.auth != null && 
        request.auth.uid in resource.data.participants;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }

    match /chats/{chatId}/messages/{messageId} {
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/chats/$(chatId)).data.participants[request.auth.uid] != null;
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.sender;
      allow update, delete: if request.auth != null && 
        request.auth.uid == resource.data.sender;
    }
  }
}

